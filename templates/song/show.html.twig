{% extends 'base2.html.twig' %}

{% block title %}Song{% endblock %}

{% block body %}
    <style>
        body{
            background-image:url({{ asset('images/music.jpg') }}) ;
            background-size: 200% 200%;
            animation: gradient 80s ease infinite;
            padding: 0;
            margin: 0;
            color: aquamarine;
        }
        @keyframes gradient {
            0% {
                background-position: 0% 50%;
            }
            50% {
                background-position: 100% 50%;
            }
            100% {
                background-position: 0% 50%;
            }
        }
        *{
            color: aquamarine;
        }
    </style>
    <h1>Song</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ song.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ song.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ song.date ? song.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_song_index') }}">back to list</a>

    <a href="{{ path('app_song_edit', {'id': song.id}) }}">edit</a>

    {{ include('song/_delete_form.html.twig') }}
{% endblock %}
